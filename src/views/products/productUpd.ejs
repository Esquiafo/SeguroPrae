<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>
<!-- CAMBIAR DESDE ACA -->
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-4 imgPrdAdd">
            <div class="imagen">
                <a href="" target="_blank"><img src="/images/fire-prdAdd.png" alt="" /></a>
            </div>
            <div class="imagen">
                <a href="" target="_blank"><img src="/images/user-prdAdd.png" alt="" /></a>
            </div>
            <div class="imagen">
                <a href="" target="_blank"><img src="/images/heart-prdAdd.png" alt="" /></a>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-8 formPrdAdd">
           <h1>Editando producto <%= updPrd.prd_price %></h1>
            <form class="was-validated" action="/products/productUpd?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="input-group formImp formImp1">
                    <input class="form-control input-sm imp" type="text" name="prd_category" value="<%= updPrd.prd_category %>" 
                        id="prd_category" >
                </div>
                
                <div class="mb-10 formImp formImp2">
                    <textarea class="form-control is-invalid imptArea" id="prd_description" name="prd_description"
                    value="<%= updPrd.prd_description %>" required></textarea>
                </div>
                <div class="input-group formImp formImp3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="prd_image" name="prd_image"
                            aria-describedby="prdImg" value="<%= updPrd.prd_image %>">
                        <label class="custom-file-label imp" for="prd_image"></label>
                    </div>
                </div>
                
                <div class="input-group formImp formImp4">
                    <input class="form-control input-sm imp" name="prd_price" id="prd_price"
                        type="number" value="<%= updPrd.prd_price %>">
                </div>
                <div class="form-group ">
                    <div class="col-sm-6">
                        <button type="submit" id="btnSubmit" class="btn btn-block btnSubmit">GUARDAR</button>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>

<% - include('../partials/footer.ejs') %>