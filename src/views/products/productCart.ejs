              <button name="item" value="<%=  el.id %>" type="submit">Comprar</button>
            </form>
            <form action="/products/carrito" method="POST">
              <button name="borrado" value="<%=  el.id %>">Borrar producto</button>
            </form>
            <br>
  
            <br>
          </div>
        </div>
  
        <% }).sort(); %>
  
      </div>
    </div>
    
