    <div class="container">
      <div class="row">
        <br>
        <%let array= JSON.parse(DatosCookie) %>
        <%let array2 = array.map(i=>Number(i)) %>
        <%    products.filter(function (el) {                      %>
        <%    return array2.includes(el.id);             %>
        <%    }).map(function(el) {             %>                           %>

          <%// console.log(CookieBorrada)%>
        <br>
        <div class="col-sm-12 col-md-12 col-lg-12">
  
          <div class="col-sm-4 col-md-4">
            <img src="/images/prdImages/<%= el.image %>" alt="">
          </div>
          <br>
          <div class="col-sm-8 col-md-8">
            <br>
            <img src="/images/photos/<%= el.image %>" alt=""><br>
            <b>Descripc√≠on:</b> <%=  el.description %> <br>

